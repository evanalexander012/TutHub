<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchScreenActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic2"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/user_profile_pic"
                    tools:src="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic3"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/user_profile_pic"
                    tools:src="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic4"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/user_profile_pic"
                    tools:src="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic5"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/user_profile_pic"
                    tools:src="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic6"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/user_profile_pic"
                    tools:srcCompat="@drawable/user_profile_pic" />

                <TextView
                    android:id="@+id/user_desc6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation">

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>